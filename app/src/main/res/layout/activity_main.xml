<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/description"
        android:layout_width="@dimen/the_360dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/description"
        android:textColor="@color/blue_1"
        android:textSize="@dimen/the_20sp"
        android:layout_marginTop="@dimen/the_20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/description_content"
        android:layout_width="@dimen/the_360dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/the_20dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/the_16sp"
        android:text="@string/description_content"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/phone_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="@dimen/the_20dp"
        app:layout_constraintTop_toBottomOf="@+id/description_content"
        app:layout_constraintLeft_toLeftOf="@id/description_content"
        android:src="@drawable/my_phone_1"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="@dimen/the_20dp"
        app:layout_constraintTop_toBottomOf="@+id/phone_icon"
        app:layout_constraintLeft_toLeftOf="@id/description_content"
        android:src="@drawable/ic_baseline_location_on_24"
        />
    <TextView
        android:id="@+id/phone_number"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:ignore="MissingConstraints"
        android:gravity="bottom"
        app:layout_constraintLeft_toRightOf="@+id/phone_icon"
        app:layout_constraintBottom_toBottomOf="@+id/phone_icon"
        android:layout_marginLeft="@dimen/the_16dp"
        android:textSize="@dimen/the_16sp"
        android:text="@string/phone_number"
        android:textColor="@color/blue_1"
        />
    <TextView
        android:id="@+id/location"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:ignore="MissingConstraints"
        android:gravity="bottom"
        app:layout_constraintLeft_toRightOf="@+id/location_icon"
        app:layout_constraintBottom_toBottomOf="@+id/location_icon"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginLeft="@dimen/the_16dp"
        android:textSize="@dimen/the_16sp"
        android:text="@string/location"
        android:textColor="@color/blue_1"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/the_300dp"
        tools:ignore="MissingConstraints"
        android:src="@drawable/android_image"
        app:layout_constraintTop_toBottomOf="@+id/location_icon"
        android:layout_marginTop="@dimen/the_16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>